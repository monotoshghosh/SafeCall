<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_marginTop="104dp"
        android:backgroundTint="#F8D6F6"
        app:cardCornerRadius="17dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="@+id/photoSavedPersonInfo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/photoSavedPersonInfo"
        app:layout_constraintTop_toTopOf="@+id/photoSavedPersonInfo">

        <ImageView
            android:id="@+id/adminPhotoChangeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil2"
            android:padding="5dp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/exitBtnSavedPersonInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/backbtn"
        android:foregroundGravity="center"
        android:gravity="center"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photoSavedPersonInfo"
        android:layout_width="139dp"
        android:layout_height="139dp"
        android:layout_gravity="center"
        android:src="@drawable/profilepic1"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0.1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/nameSavedPersonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Name"
        android:textColor="#656464"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoSavedPersonInfo" />

    <TextView
        android:id="@+id/phoneNoSavedPersonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Phone No"
        android:textColor="#656464"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationSavedPersonInfo" />

    <TextView
        android:id="@+id/ageSavedPersonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Age"
        android:textColor="#656464"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSavedPersonInfo" />

    <TextView
        android:id="@+id/bloodgroupSavedPersonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Blood Group"
        android:textColor="#656464"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageSavedPersonInfo" />

    <TextView
        android:id="@+id/locationSavedPersonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Location"
        android:textColor="#656464"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodgroupSavedPersonInfo" />


    <androidx.cardview.widget.CardView
        android:id="@+id/editSavedPersonInfo"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginRight="64dp"
        android:backgroundTint="#4CAD50"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/removeSavedPersonInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toEndOf="@+id/removeSavedPersonInfo"
        app:layout_constraintTop_toTopOf="@+id/removeSavedPersonInfo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/removeSavedPersonInfo"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="#D10303"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNoSavedPersonInfo"
        app:layout_constraintVertical_bias="0.489">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Remove"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>