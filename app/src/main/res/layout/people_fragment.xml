<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:layout_editor_absoluteX="132dp"
    tools:layout_editor_absoluteY="4dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="SOS People"
        android:textColor="#807F7F"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/person1"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#F8F5F5"
        app:cardCornerRadius="8dp"
        app:cardElevation="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person1Img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/add_image2"
            app:civ_border_color="#FF000000"
            android:scaleType="centerCrop"
            app:civ_border_width="0.7dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/person5"
        android:layout_width="110dp"
        android:layout_height="113dp"

        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#F8F5F5"
        app:cardCornerRadius="8dp"
        app:cardElevation="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person3"
        app:layout_constraintVertical_bias="0.097">

        <ImageView
            android:id="@+id/person5Img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/add_image2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/person3"
        android:layout_width="110dp"
        android:layout_height="113dp"

        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#F8F5F5"
        app:cardCornerRadius="8dp"
        app:cardElevation="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person1">

        <ImageView
            android:id="@+id/person3Img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/add_image2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/person4"
        android:layout_width="110dp"
        android:layout_height="113dp"

        android:backgroundTint="#F8F5F5"
        app:cardCornerRadius="8dp"
        app:cardElevation="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/person3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toEndOf="@+id/person3"
        app:layout_constraintTop_toTopOf="@+id/person3"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/person4Img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/add_image2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/person6"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:backgroundTint="#F8F5F5"
        app:cardCornerRadius="8dp"
        app:cardElevation="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/person5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toEndOf="@+id/person5"
        app:layout_constraintTop_toTopOf="@+id/person5"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/person6Img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/add_image2" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/person2"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:backgroundTint="#F8F5F5"
        app:cardCornerRadius="8dp"
        app:cardElevation="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/person1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toEndOf="@+id/person1"
        app:layout_constraintTop_toTopOf="@+id/person1"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/person2Img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/add_image2" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>