<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="490dp"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF">


    <Button
        android:id="@+id/exitBtnSavedPersonInfoDilogBox"
        android:layout_width="22dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/red"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <androidx.cardview.widget.CardView
        android:id="@+id/photoCardViewSavedPersonInfoDilogBox"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="49dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoSavedPersonInfoDilogBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profilepic1"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0.7dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameSavedPersonInfoDilogBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Name"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#656464"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoCardViewSavedPersonInfoDilogBox" />

    <TextView
        android:id="@+id/bloodgroupSavedPersonInfoDilogBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Blood Group"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#656464"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageSavedPersonInfoDilogBox" />

    <TextView
        android:id="@+id/locationSavedPersonInfoDilogBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Location"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#656464"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodgroupSavedPersonInfoDilogBox" />

    <TextView
        android:id="@+id/ageSavedPersonInfoDilogBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Age"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#656464"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSavedPersonInfoDilogBox" />


    <TextView
        android:id="@+id/phoneNoSavedPersonInfoDilogBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Phone No"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#656464"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationSavedPersonInfoDilogBox" />

    <androidx.cardview.widget.CardView
        android:id="@+id/editSavedPersonInfoDilogBox"
        android:layout_width="66dp"
        android:layout_height="24dp"
        android:backgroundTint="#4CAD50"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/removeSavedPersonInfoDilogBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/removeSavedPersonInfoDilogBox">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/removeSavedPersonInfoDilogBox"
        android:layout_width="66dp"
        android:layout_height="24dp"
        android:backgroundTint="#D10303"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editSavedPersonInfoDilogBox"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNoSavedPersonInfoDilogBox"
        app:layout_constraintVertical_bias="0.58">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Remove"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>